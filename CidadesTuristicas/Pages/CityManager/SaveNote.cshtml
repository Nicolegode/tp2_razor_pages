@page "/CityManager/SaveNote"
@model CidadesTuristicas.Pages.CityManager.SaveNoteModel
@{
    ViewData["Title"] = "Salvar Nota";
}

<div class="container mt-4">
    <h1>Salvar Nota em Arquivo</h1>
    <p>Escreva um texto e salve como arquivo .txt</p>

    @if (Model.FileSaved && !string.IsNullOrEmpty(Model.FileName))
    {
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Arquivo salvo com sucesso!</h4>
            <p>Seu arquivo foi salvo como: <strong>@Model.FileName</strong></p>
            <hr>
            <p class="mb-0">
                <a href="/files/@Model.FileName" 
                   class="btn btn-success" 
                   download="@Model.FileName"
                   >
                    <i class="fas fa-download"></i> Download do Arquivo
                </a>
            </p>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Criar Nova Nota</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <div class="mb-3">
                    <label asp-for="Input.Content" class="form-label"></label>
                    <textarea asp-for="Input.Content" 
                              class="form-control" 
                              rows="10" 
                              placeholder="Digite o conteúdo da sua nota aqui..."></textarea>
                    <span asp-validation-for="Input.Content" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Salvar Arquivo
                    </button>
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.FileName))
    {
        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">Informações do Arquivo</h6>
            </div>
            <div class="card-body">
                <p><strong>Nome:</strong> @Model.FileName</p>
                <p><strong>Localização:</strong> wwwroot/files/@Model.FileName</p>
                <p><strong>Timestamp:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}