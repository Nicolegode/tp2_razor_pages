@page "/CityManager/CityList"
@model CidadesTuristicas.Pages.CityManager.CityListModel
@{
    ViewData["Title"] = "Lista de Cidades - Tag Helpers";
}

<div class="container mt-4">
    <h1>Lista de Cidades</h1>
    <p>Clique em uma cidade para ver seus detalhes usando Tag Helpers:</p>

    <div class="row">
        @foreach (var city in Model.Cities)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">@city</h5>
                        <a asp-page="/CityManager/CityDetails" 
                           asp-route-cityName="@city" 
                           class="btn btn-primary">
                            Ver Detalhes
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <h5>Links Diretos com Tag Helpers:</h5>
        <ul class="list-group">
            @foreach (var city in Model.Cities)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @city
                    <a asp-page="/CityManager/CityDetails" 
                       asp-route-cityName="@city" 
                       class="btn btn-sm btn-outline-primary">
                        Detalhes
                    </a>
                </li>
            }
        </ul>
    </div>

    <p class="mt-3">
        <a href="/" class="btn btn-secondary">Voltar para Home</a>
    </p>
</div>