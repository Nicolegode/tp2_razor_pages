@page
@model CidadesTuristicas.Pages.CityManager.CreateCityModel
@{
    ViewData["Title"] = "Cadastrar Cidade - Validação Client-Side";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Cadastrar Nova Cidade</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Input.CityName" class="form-label"></label>
                    <input asp-for="Input.CityName" class="form-control" />
                    <span asp-validation-for="Input.CityName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Cadastrar</button>
                <a href="/" class="btn btn-secondary">Voltar</a>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success mt-3">
            @Model.SuccessMessage
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
