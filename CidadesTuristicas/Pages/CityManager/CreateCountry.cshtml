@page "/CityManager/CreateCountry"
@model CidadesTuristicas.Pages.CityManager.CreateCountryModel
@{
    ViewData["Title"] = "Cadastrar País - Validação Customizada";
}

<div class="container mt-4">
    <h1>Cadastrar País</h1>
    <p>Cadastre um novo país com validação customizada</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Dados do País</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.CountryName" class="form-label"></label>
                            <input asp-for="Input.CountryName" 
                                   class="form-control" 
                                   placeholder="Ex: Brasil" />
                            <span asp-validation-for="Input.CountryName" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.CountryCode" class="form-label"></label>
                            <input asp-for="Input.CountryCode" 
                                   class="form-control" 
                                   placeholder="Ex: BR"
                                   maxlength="2"
                                   style="text-transform: uppercase;" />
                            <span asp-validation-for="Input.CountryCode" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i>
                                O código deve começar com a mesma letra do nome do país
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cadastrar País
                    </button>
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Exemplos de validação -->
    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h6 class="mb-0">Exemplos de Validação</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="text-success">Válidos:</h6>
                    <ul class="list-unstyled">
                        <li><strong>Brasil</strong> → <code>BR</code></li>
                        <li><strong>Argentina</strong> → <code>AR</code></li>
                        <li><strong>Chile</strong> → <code>CH</code></li>
                        <li><strong>Portugal</strong> → <code>PT</code></li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6 class="text-danger">Inválidos:</h6>
                    <ul class="list-unstyled">
                        <li><strong>Brasil</strong> → <code>AR</code></li>
                        <li><strong>Argentina</strong> → <code>BR</code></li>
                        <li><strong>Chile</strong> → <code>BR</code></li>
                        <li><strong>Portugal</strong> → <code>BR</code></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}