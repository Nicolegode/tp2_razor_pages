@page
@model IndexModel
@{
    ViewData["Title"] = "Cidades Turísticas - Home";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4">Cidades Turísticas</h1>
        <p class="lead">Sistema de gerenciamento de cidades e países turísticos</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Menu Principal</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="fas fa-city fa-3x text-info mb-3"></i>
                                    <h5 class="card-title">Cadastrar Cidade</h5>
                                    <p class="card-text">Cadastre uma nova cidade turística.</p>
                                    <a href="/CityManager/CreateCity" class="btn btn-info">
                                        <i class="fas fa-plus"></i> Nova Cidade
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="card h-100 border-success">
                                <div class="card-body text-center">
                                    <i class="fas fa-globe fa-3x text-success mb-3"></i>
                                    <h5 class="card-title">Cadastrar Países</h5>
                                    <p class="card-text">Cadastre múltiplos países.</p>
                                    <a href="/CityManager/CreateCountry" class="btn btn-success">
                                        <i class="fas fa-plus"></i> Múltiplos Países
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 mb-3">
                            <div class="card h-100 border-warning">
                                <div class="card-body text-center">
                                    <i class="fas fa-list fa-3x text-warning mb-3"></i>
                                    <h5 class="card-title">Lista de Cidades</h5>
                                    <p class="card-text">Veja cidades com Tag Helpers.</p>
                                    <a href="/CityManager/CityList" class="btn btn-warning">
                                        <i class="fas fa-list"></i> Ver Lista
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 mb-3">
                            <div class="card h-100 border-danger">
                                <div class="card-body text-center">
                                    <i class="fas fa-file-alt fa-3x text-danger mb-3"></i>
                                    <h5 class="card-title">Salvar Nota</h5>
                                    <p class="card-text">Escreva e salve notas em arquivo.</p>
                                    <a href="/CityManager/SaveNote" class="btn btn-danger">
                                        <i class="fas fa-save"></i> Nova Nota
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <h5>Exemplos de Cidades:</h5>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="/CityManager/CityDetails/Rio-de-Janeiro" class="btn btn-outline-primary btn-sm">Rio de Janeiro</a>
                            <a href="/CityManager/CityDetails/Sao-Paulo" class="btn btn-outline-primary btn-sm">São Paulo</a>
                            <a href="/CityManager/CityDetails/Salvador" class="btn btn-outline-primary btn-sm">Salvador</a>
                            <a href="/CityManager/CityDetails/Brasilia" class="btn btn-outline-primary btn-sm">Brasília</a>
                            <a href="/CityManager/CityDetails/Recife" class="btn btn-outline-primary btn-sm">Recife</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>